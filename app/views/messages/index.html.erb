<h1><%= @message.conversation.recipient.name %>さんとのメッセージ</h1>
<div class="row">
  <% @messages.each do |message| %>
    <div class="row">
      <% if message.user == current_user %>
        <div class="col-md-4 col-md-offset-6 col-xs-5 col-xs-offset-1">
          <P><%= profile_img(message.user) %> | <%= message.created_at %><P>
          <P><%= simple_format(message.content) %></P>
        </div>
      <% else %>
        <div class="col-md-4 col-md-offset-2 col-xs-5 col-xs-offset-6">
          <P><%= profile_img(message.user) %> | <%= message.created_at %><P>
          <P><%= simple_format(message.content) %></P>
        </div>
      <% end %>
    </div>
  <% end %>


  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
      <%= form_for(@message, url: conversation_messages_path) do |f| %>
        <div class="field">
          <%= f.text_area :content, class: 'form-control', placeholder: 'メッセージを入力してください' %>
        </div>
        <div class="action">
          <%= f.submit 'メッセージを送る', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
