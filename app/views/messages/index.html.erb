<div class="container">
  <% @messages.each do |message| %>
    <div class="row">
      <% if message.user == current_user %>
        <div class="col-sm-4"></div>
      <% else %>
        <div class="col-sm-2"></div>
      <% end %>

      <div class="col-md-4">
      <P><%= message.user.name %> | <%= profile_img(message.user) %> | <%= message.created_at %></P>
        <P><%= simple_format(message.content) %></P>
      </div>
    </div>
  <% end %>


  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <%= form_for(@message, url: conversation_messages_path) do |f| %>
        <div class="field">
          <%= f.text_area :content %>
        </div>
        <div class="action">
          <%= f.submit 'メッセージを送る' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
