<h1>ユーザ一覧</h1>
  <% @users.each do |user| %>
    <div class="col-md-3 col-md-offset-1 col-xs-4 col-xs-offset-1">
        <h2><%= link_to user.name, user_path(user) %><h2>
        <%= profile_img(user) %>
      <% if user != current_user %>
        <%= render partial: 'follow_form', locals: { user: user } %>
      <% else %>
        <%= link_to 'ユーザー編集', edit_user_registration_path, class: 'btn btn-info' %>
      <% end %>
    </div>
  <% end %>
