<!-- フォローボタン -->
<div id="follow_form_<%= user.id %>">
  <% unless current_user.following?(user) %>
    <%= form_for(current_user.relationships.build(follower_id: user.id), remote: true) do |f| %>
      <%= f.hidden_field :follower_id %>
      <%= f.submit 'フォローする', class: 'btn btn-large' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.find_by(follower_id: user.id), html: { method: :delete }, remote: true) do |f| %>
      <%= f.submit 'フォロー解除', class: 'btn btn-large' %>
    <% end %>
  <% end %>
</div>
