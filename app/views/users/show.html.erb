<h1><%= @user.name %>さんの情報</h1>

<h2>プロフフィール</h2>

<h2>フォロー</h2>
<% @user.followers.each do |follower| %>
  <%= follower.name %>
  <%= profile_img(follower) %>
<% end %>

<h2>フォロワー</h2>
<% @user.followed_users.each do |followed| %>
  <%= followed.name %>
  <%= profile_img(followed) %>
<% end %>

<h2>相互フォローの友達</h2>
<% @user.friend.each do |friends| %>
  <%= friends.name %>
  <%= profile_img(friends) %>
<% end %>
